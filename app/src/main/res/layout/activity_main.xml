<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    tools:context=".MainActivity">
    <CheckBox
        android:id="@+id/cb_3"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/cb_2"
        android:layout_above="@id/cb_3"
        android:layout_marginBottom="32dp"
        android:layout_alignLeft="@id/cb_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/cb_1"
        android:layout_above="@id/cb_2"
        android:layout_marginBottom="32dp"
        android:layout_alignLeft="@id/cb_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/sb_3"
        android:progressDrawable="@android:color/transparent"
        android:layout_marginBottom="12dp"
        android:thumb="@drawable/pokemon_3"
        android:paddingStart="34dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/cb_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:id="@+id/sb_2"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/pokemon_2"
        android:layout_above="@id/sb_3"
        android:paddingStart="34dp"
        android:layout_toRightOf="@id/cb_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:id="@+id/sb_1"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/pokemon_1"
        android:layout_above="@id/sb_2"
        android:paddingStart="34dp"
        android:layout_toRightOf="@id/cb_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/animal_crossing"/>
    <TextView
        android:id="@+id/tv_diemso"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#FF00"/>
    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/nut_play"/>

</RelativeLayout>